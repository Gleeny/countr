{
  "name": "countr",
  "main": "build",
  "license": "GPL-3.0",
  "scripts": {
    "build": "tsc",
    "docker": "npm run docker:build && npm run docker:up",
    "docker:build": "docker-compose --project-directory . build",
    "docker:down": "docker-compose --project-directory . down",
    "docker:logs": "docker-compose --project-directory . logs -f",
    "docker:prod": "npm run docker:prod:build && npm run docker:prod:up",
    "docker:prod:build": "docker-compose -f .docker/docker-compose-clusterfuck.yml --project-directory . build",
    "docker:prod:down": "docker-compose -f .docker/docker-compose-clusterfuck.yml --project-directory . down",
    "docker:prod:logs": "docker-compose -f .docker/docker-compose-clusterfuck.yml --project-directory . logs -f",
    "docker:prod:start": "npm run docker:prod:up",
    "docker:prod:stop": "npm run docker:prod:down",
    "docker:prod:up": "docker-compose -f .docker/docker-compose-clusterfuck.yml --project-directory . up -d",
    "docker:start": "npm run docker:up",
    "docker:stop": "npm run docker:down",
    "docker:up": "docker-compose --project-directory . up -d",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "start": "node .",
    "start:manager": "node build/utils/cluster/manager",
    "test": "jest",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@typegoose/typegoose": "9.11.0",
    "ajv": "8.11.0",
    "bufferutil": "4.0.6",
    "discord.js": "14.0.3",
    "dotenv": "16.0.1",
    "erlpack": "github:discord/erlpack",
    "express": "4.18.1",
    "express-rate-limit": "6.5.1",
    "helmet": "5.1.1",
    "match-sorter": "6.3.1",
    "mathjs": "11.0.1",
    "mongoose": "6.5.0",
    "morgan": "1.10.0",
    "ordinal": "1.0.3",
    "superagent": "8.0.0",
    "time-limited-regular-expressions": "1.0.0",
    "utf-8-validate": "5.0.9",
    "winston": "3.8.1",
    "winston-daily-rotate-file": "4.7.1",
    "ws": "8.8.1",
    "zlib-sync": "0.1.7"
  },
  "devDependencies": {
    "@tsconfig/node16-strictest": "1.0.3",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.6",
    "@types/morgan": "1.9.3",
    "@types/node": "16.11.46",
    "@types/superagent": "4.1.15",
    "@types/time-limited-regular-expressions": "1.0.0",
    "@types/ws": "8.5.3",
    "eslint": "8.20.0",
    "eslint-config-promise": "github:promise/eslint-config",
    "jest": "28.1.3",
    "ts-jest": "28.0.7",
    "typescript": "4.6.4"
  },
  "eslintConfig": {
    "extends": "promise"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  }
}
